{% extends 'base.html.twig' %}

{% block title %}Attractions d'Ukraine{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">Découvrez les Attractions d'Ukraine</h1>
    
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for attraction in attractions %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    {% if attraction.photos|length > 0 %}
                        <img src="{{ attraction.photos[0].url }}" 
                             class="card-img-top" 
                             alt="{{ attraction.name }}"
                             style="height: 200px; object-fit: cover;"
                             onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'card-img-top bg-secondary d-flex align-items-center justify-content-center\' style=\'height: 200px;\'><i class=\'bi bi-image text-white\' style=\'font-size: 3rem;\'></i></div>';">
                    {% else %}
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-image text-white" style="font-size: 3rem;"></i>
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ attraction.name }}</h5>
                        <p class="text-muted mb-2">
                            <i class="bi bi-geo-alt-fill"></i> 
                            {% if attraction.latitude and attraction.longitude %}
                                {{ attraction.latitude|slice(0, 6) }}, {{ attraction.longitude|slice(0, 6) }}
                            {% else %}
                                Ukraine
                            {% endif %}
                            {% if attraction.category %}
                                <span class="badge bg-primary float-end">{{ attraction.category.name }}</span>
                            {% endif %}
                        </p>
                        <p class="card-text">{{ attraction.description|slice(0, 100) }}{% if attraction.description|length > 100 %}...{% endif %}</p>
                        <a href="{{ path('app_attraction_show', {'id': attraction.id}) }}" class="btn btn-outline-primary w-100">
                            <i class="bi bi-eye"></i> Voir les détails
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Aucune attraction trouvée.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
</style>
{% endblock %}
