                        {% if app.user %}
                            <span class="text-white">{{ app.user.email }}</span>
                            <a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">Se deconnecter</a>
                        {% else %}
                            <a class="btn btn-outline-light btn-sm" href="{{ path('app_login') }}">Se connecter</a>
