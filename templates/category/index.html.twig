{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Catégories</h1>
        
        <div class="row">
            <!-- List of Categories -->
            <div class="col-md-6">
                <h3>Existante Catégories</h3>
                {% if categories|length > 0 %}
                    <ul class="list-group">
                        {% for category in categories %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ category.name }}
                                <span class="badge bg-primary rounded-pill">
                                    {% if category.photos is defined %}
                                        {{ category.photos|length }} photos
                                    {% else %}
                                        0 photos
                                    {% endif %}
                                </span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="alert alert-info">No categories found.</div>
                {% endif %}
            </div>
            
            <!-- Add New Category Form -->
            <div class="col-md-6">
                <h3>Ajouter une nouvelle catégorie</h3>
                {{ form_start(formCategorie) }}
                    <div class="mb-3">
                        {{ form_label(formCategorie.name, 'Nom de la catégorie', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(formCategorie.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(formCategorie.name) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Ajouter Categorie</button>
                {{ form_end(formCategorie) }}
            </div>
        </div>
    </div>


{% endblock %}
