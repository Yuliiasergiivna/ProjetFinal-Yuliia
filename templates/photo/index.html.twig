{% extends 'base.html.twig' %}

{% block title %}Téléchargement de photo{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Ajouter une photo</h1>
    
    {# Affichage des messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {{ form_start(formPhoto, {'attr': {'enctype': 'multipart/form-data'}}) }}
            {{ form_row(formPhoto.name) }}
            {{ form_row(formPhoto.image) }}
            {{ form_row(formPhoto.attraction) }}

        
            <button type="submit" class="btn btn-primary mt-3">
                 <i class="bi bi-upload"></i> Télécharger la photo
            </button>
        {{ form_end(formPhoto) }}
        {%else%}
            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle"></i>
                Vous devez <a href="{{ path('app_login') }}">vous connecter</a> ou <a href="{{ path('app_register') }}">vous inscrire</a> pour télécharger une photo.
            </div>
    {% endif %}    
    <hr class="my-5">

    <h2>Photos existantes</h2>
    <div class="row">
        {% for photo in photos %}
            <div class="col-md-3 mb-3">
                <div class="card">
                   <a href="{{ path('app_attraction_show', {'id': photo.attraction.id}) }}" class="photo-link">
                        <img src="/uploads/photos/{{ photo.url }}" class="card-img-top" alt="{{ photo.name }}">
                        <div class="card-body">
                            <h6 class="card-title">{{ photo.name }}</h6>
                        </div>
                    </a>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-muted">Aucune photo téléchargée pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        width: 100%;
        height: 250px;
        object-fit: cover
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    .card img{
        width: 100%;
        height: 150px;
        object-fit: cover  
    }
    h2{
        text-align: center;
        margin-bottom: 15px;
    }
    .photo-link{
        text-decoration: none;
        font-size: 0.9rem;
        display: block;
    }
    .photo-link .card-titre{
        margin: 0;
        font-size: 0.9rem;
    }
</style>
{% endblock %}
