{% extends 'base.html.twig' %}

{% block title %}Téléchargement de photo{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Ajouter une photo</h1>
    
    {# Affichage des messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {{ form_start(formPhoto, {'attr': {'enctype': 'multipart/form-data'}}) }}
            {{ form_row(formPhoto.name) }}
            {{ form_row(formPhoto.image) }}
            {{ form_row(formPhoto.dateUpload) }}
            {{ form_row(formPhoto.attraction) }}
            {{ form_row(formPhoto.utilisateur) }}
        
            <button type="submit" class="btn btn-primary mt-3">
                 <i class="bi bi-upload"></i> Télécharger la photo
            </button>
        {{ form_end(formPhoto) }}
        {%else%}
            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle"></i>
                Vous devez <a href="{{ path('app_login') }}">vous connecter</a> ou <a href="{{ path('app_register') }}">vous inscrire</a> pour télécharger une photo.
            </div>
    {% endif %}    
    <hr class="my-5">

    <h2>Photos existantes</h2>
    <div class="row">
        {% for photo in photos %}
            <div class="col-md-3 mb-3">
                <div class="card">
                    <img src="/uploads/photos/{{ photo.url }}" class="card-img-top" alt="{{ photo.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ photo.name }}</h5>
                        <p class="card-text">
                            <small class="text-muted">{{ photo.dateUpload|date('d/m/Y') }}</small>
                        </p>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-muted">Aucune photo téléchargée pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
