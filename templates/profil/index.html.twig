{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <img src="{{ asset('images/user_icon.png') }}" alt="Profil" class="rounded-circle mb-3" style="width: 100px; height: 100px; border: 4px solid white;">
                    <h2 class="mb-0">Mon Profil</h2>
                </div>
                
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-12">
                            <h4 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-person-circle"></i> Informations personnelles
                            </h4>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-md-8">
                            <span class="text-muted">{{ app.user.email }}</span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Statut:</strong>
                        </div>
                        <div class="col-md-8">
                            <span class="badge bg-success">Connecté</span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Rôles:</strong>
                        </div>
                        <div class="col-md-8">
                            {% for role in app.user.roles %}
                                <span class="badge bg-info me-1">{{ role }}</span>
                            {% endfor %}
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-12">
                            <h4 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-gear"></i> Actions
                            </h4>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_favorites') }}" class="btn btn-outline-primary">
                            <i class="bi bi-heart-fill"></i> Mes Favoris
                        </a>
                        <a href="{{ path('app_photo') }}" class="btn btn-outline-primary">
                            <i class="bi bi-image"></i> Mes Photos
                        </a>
                        <a href="{{ path('app_logout') }}" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right"></i> Se déconnecter
                        </a>
                    </div>
                </div>
                
                <div class="card-footer text-muted text-center">
                    <small>Membre depuis {{ app.user.createdAt is defined ? app.user.createdAt|date('d/m/Y') : 'N/A' }}</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .btn {
        border-radius: 8px;
        padding: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
</style>
{% endblock %}
