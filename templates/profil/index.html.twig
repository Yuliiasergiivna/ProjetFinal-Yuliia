{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                <div class="card-header text-white text-center py-3 position-relative profil-header">
                    <div class="profil-avatar mx-auto mb-3">
                        <img src="{{ asset('images/user_icon.png') }}" alt="Profil" class="rounded-circle border border-4 border-white shadow-sm" >
                    </div>
                                            <form method="post" action="{{ path('app_profile_photo') }}" enctype="multipart/form-data" class="position-absolute top-100 start-50 translate-middle mt-2">
                            <label for="photoUpload" class="btn btn-sm btn-light rounded-circle shadow-sm" title="Changer la photo">
                                <i class="bi bi-camera-fill"></i>
                            </label>
                            <input type="file" id="photoUpload" name="photo" class="d-none" accept="image/*" onchange="previewProfilePhoto(event)">
                            <button type="submit" class="d-none" id="submitPhoto"></button>
                        </form>
                    </div>
                    <h2 class="fw-bold mb-0">Mon Profil</h2>
                    <p class="text-light opacity-75 mb-0">{{ app.user.email }}</p>
                </div>
                
                <div class="card-body p-4 p-md-5 bg-light">
                    <h4 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-person-circle"></i> Informations personnelles
                    </h4>
                    <dl class="row mb-4">
                        <dt class= "col-md-4">Email:</dt>
                        <dd class="col-md-8 text-muted">{{ app.user.email }}</dd>
                        <dt class= "col-md-4">Statut:</dt>
                        <dd class="col-md-8">
                            <span class="badge bg-success">Connect√©</span>
                        </dd>
                        <dt class= "col-md-4">R√¥les:</dt>
                        <dd class="col-md-8">
                            {% for role in app.user.roles %}
                                <span class="badge bg-info me-1">{{ role| replace({"ROLE_": ""}) }}</span>
                            {% endfor %}
                        </dd>
                        <dt class= "col-md-4">Membre depuis:</dt>
                        <dd class="col-md-8 text-muted">{{ app.user.createdAt is defined ? app.user.createdAt|date('d/m/Y') : 'N/A' }}</dd>
                    </dl>
                    <h4 class="border-bottom pb-2 mb-4 text-primary">
                        <i class="bi bi-gear me-2"></i>Actions
                    </h4>
                    
                    <div class="d-grid gap-3">
                        <a href="{{ path('app_favorites') }}" class="btn btn-outline-primary btn-lg d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-heart-fill"></i> <span>Mes Favoris</span>
                        </a>
                        <a href="{{ path('app_photo') }}" class="btn btn-outline-primary btn-lg d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-image"></i> <span>Mes Photos</span>
                        </a>
                        <a href="{{ path('app_logout') }}" class="btn btn-danger btn-lg d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-box-arrow-right"></i> Se d√©connecter
                        </a>
                    </div>
                </div>
                
                <div class="card-footer text-muted text-center py-3 small bg-white">
                    <em>Merci de votre visite !</em>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-header {
        background: linear-gradient(135deg, #1575f3ff, #f6e609ff);
    }

/* üë§ Avatar */
    .profile-avatar img {
        width: 110px;
        height: 110px;
        object-fit: cover;
    }
    .card {
        border-radius: 15rem;
        /* overflow: hidden; */
    }
    @media (max-width: 768px) {
    .profile-avatar img {
        width: 90px;
        height: 90px;
    }
    .btn-lg {
        font-size: 1rem;
        padding: 10px;
    }
    }
    
    /* .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    } */
    
    .btn {
        border-radius: 10px;
        /* padding: 12px; */
        font-weight: 500;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }
    
    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.2);
    }
</style>
<script>
function previewProfilePhoto(event) {
    const reader = new FileReader();
    reader.onload = function(){
        const output = document.getElementById('profilePreview');
        output.src = reader.result;
    };
    reader.readAsDataURL(event.target.files[0]);

    // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º —Ñ–æ—Ä–º—É –ø–æ—Å–ª–µ –≤—ã–±–æ—Ä–∞ —Ñ–∞–π–ª–∞
    document.getElementById('submitPhoto').click();
}
</script>
{% endblock %}
