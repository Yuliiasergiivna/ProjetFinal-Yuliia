{% extends 'base.html.twig' %}

{% block title %}Changer la photo de profil{% endblock %}

{% block body %}
<div class="container py-5">
    <h2 class="mb-4">Modifier ma photo de profil</h2>

    <div class="card p-4 shadow-sm">
        <div class="text-center mb-4">
            <img src="{{ user.photo ? asset('uploads/photos/' ~ user.photo) : asset('images/user_icon.png') }}"
                 class="rounded-circle shadow-sm" alt="Profil" width="120" height="120">
        </div>

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            {{ form_row(form.photo) }}
            <button type="submit" class="btn btn-primary mt-3">
                <i class="bi bi-upload"></i> Changer la photo
            </button>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
